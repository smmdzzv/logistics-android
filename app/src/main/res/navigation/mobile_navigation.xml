    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_loading">

    <fragment
        android:id="@+id/navigation_loading"
        android:name="tj.ajoibot.ajoibotlogistics.ui.load.LoadingFragment"
        android:label="@string/title_loading"
        tools:layout="@layout/fragment_loading" />

    <fragment
        android:id="@+id/navigation_unloading"
        android:name="tj.ajoibot.ajoibotlogistics.ui.unload.UnloadingFragment"
        android:label="@string/title_unloading"
        tools:layout="@layout/fragment_unloading" />

    <fragment
        android:id="@+id/navigation_transfer"
        android:name="tj.ajoibot.ajoibotlogistics.ui.transfer.TransferFragment"
        android:label="@string/title_transfer"
        tools:layout="@layout/fragment_transfer" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="tj.ajoibot.ajoibotlogistics.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
